#!/bin/bash
# Pre-commit hook using locally installed pre-commit
# Install: ln -sf ../../scripts/pre-commit .git/hooks/pre-commit
# Requires: uv tool install pre-commit

set -euo pipefail

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

log_info() { echo -e "${GREEN}[INFO]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }

# Check if pre-commit is available
if ! command -v pre-commit &> /dev/null; then
    log_error "pre-commit is not installed. Run: uv tool install pre-commit"
    exit 1
fi

log_info "Running pre-commit..."

if pre-commit run --all-files; then
    log_info "Pre-commit checks passed"
    exit 0
else
    log_error "Pre-commit checks failed"
    exit 1
fi
